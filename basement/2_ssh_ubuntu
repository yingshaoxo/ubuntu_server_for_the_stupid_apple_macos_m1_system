# docker build -f basement/2_ssh_ubuntu --tag yingshaoxo/ubuntu_server_for_the_stupid_apple_macos_m1_system_2 .

FROM yingshaoxo/ubuntu_server_for_the_stupid_apple_macos_m1_system_1

ENV ssh_root_password yingshaoxo

RUN apt update
RUN apt install openssh-server -y
RUN apt install vim -y
RUN apt install wget -y
RUN apt install curl -y

RUN mkdir /var/run/sshd

COPY ./2.set_ssh_password_script.py /2.set_ssh_password_script.py
RUN python3 /2.set_ssh_password_script.py
RUN rm /2.set_ssh_password_script.py

RUN service ssh start
RUN service ssh reload
RUN service ssh restart

COPY ./2.run_sshd_service.py /opt/sshd_service.py

EXPOSE 22

CMD ["python3", "/opt/sshd_service.py"]
# CMD ["sleep", "infinity"]
# CMD ["/bin/bash"]